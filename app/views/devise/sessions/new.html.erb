<div class="background">
  <div class="container login align-middle">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    placeholder: "Email",
                    input_html: { autocomplete: "email", class: 'input' } %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    placeholder: "Password",
                    input_html: { autocomplete: "current-password", class: 'input' } %>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-gold" %>
      </div>
    <% end %>

    <div class="d-flex justify-content-between my-3">
      <div class="link-gold">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Create an account", new_registration_path(resource_name) %><br />
        <% end %>
      </div>
      <div class="link-light-brown">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
    </div>

    <%#= render "devise/shared/links" %>
  </div>
</div>
